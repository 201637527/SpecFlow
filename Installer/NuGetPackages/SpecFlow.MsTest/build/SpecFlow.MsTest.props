<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup>
    
    <_SpecFlow_MsTestPlugin Condition=" '$(MSBuildRuntimeType)' == 'Core'">netcoreapp2.0</_SpecFlow_MsTestPlugin>
    <_SpecFlow_MsTestPlugin Condition=" '$(MSBuildRuntimeType)' != 'Core'">net471</_SpecFlow_MsTestPlugin>
    <_SpecFlow_MsTestPluginPath>..\tasks\$(_SpecFlow_MsTestPlugin)\TechTalk.SpecFlow.MsTest.SpecFlowPlugin.dll</_SpecFlow_MsTestPluginPath>
  </PropertyGroup>

  <ItemGroup>
    <SpecFlowGeneratorPlugins Include="$(_SpecFlow_MsTestPluginPath)" />
  </ItemGroup>

</Project>